<?xml version="1.0" encoding="UTF-8"?>
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#334155;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="800" height="600" fill="url(#bg)" />
  
  <!-- Desk/Table -->
  <rect x="100" y="300" width="600" height="20" fill="#475569" />
  
  <!-- Student Figure (Left) -->
  <g transform="translate(250,250)">
    <!-- Body -->
    <circle cx="0" cy="0" r="30" fill="#94a3b8" />
    <path d="M -10 40 L 10 40 L 0 100 Z" fill="#94a3b8" />
    <!-- Book/Paper -->
    <rect x="-40" y="60" width="80" height="60" fill="#e2e8f0" />
    <line x1="-30" y1="80" x2="30" y2="80" stroke="#64748b" stroke-width="2" />
    <line x1="-30" y1="100" x2="30" y2="100" stroke="#64748b" stroke-width="2" />
  </g>
  
  <!-- Tutor Figure (Right) -->
  <g transform="translate(550,250)">
    <!-- Body -->
    <circle cx="0" cy="0" r="30" fill="#60a5fa" />
    <path d="M -10 40 L 10 40 L 0 100 Z" fill="#60a5fa" />
    <!-- Teaching Gesture -->
    <line x1="-20" y1="20" x2="-40" y2="40" stroke="#60a5fa" stroke-width="4" />
    <line x1="20" y1="20" x2="40" y2="40" stroke="#60a5fa" stroke-width="4" />
  </g>
  
  <!-- Educational Elements -->
  <g transform="translate(400,150)">
    <!-- Mathematical Symbols -->
    <text x="-100" y="0" fill="#f0f9ff" font-family="Arial" font-size="24">+</text>
    <text x="-50" y="0" fill="#f0f9ff" font-family="Arial" font-size="24">−</text>
    <text x="0" y="0" fill="#f0f9ff" font-family="Arial" font-size="24">×</text>
    <text x="50" y="0" fill="#f0f9ff" font-family="Arial" font-size="24">÷</text>
    <text x="100" y="0" fill="#f0f9ff" font-family="Arial" font-size="24">=</text>
  </g>
  
  <!-- Interaction Indicators -->
  <g stroke="#60a5fa" stroke-width="2" opacity="0.6">
    <path d="M 300 200 C 350 180 450 180 500 200" fill="none" />
    <path d="M 500 250 C 450 230 350 230 300 250" fill="none" />
  </g>
  
  <!-- Decorative Elements -->
  <g opacity="0.2">
    <circle cx="100" cy="100" r="20" fill="#60a5fa" />
    <circle cx="700" cy="500" r="30" fill="#60a5fa" />
    <circle cx="400" cy="50" r="15" fill="#60a5fa" />
  </g>
</svg>