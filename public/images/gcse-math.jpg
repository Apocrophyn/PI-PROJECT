<?xml version="1.0" encoding="UTF-8"?>
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#312e81;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="800" height="600" fill="url(#bg)" />
  
  <!-- Mathematical Elements -->
  <g fill="none" stroke="#818cf8" stroke-width="2" opacity="0.8">
    <!-- Quadratic Function Graph -->
    <path d="M 200 500 Q 400 100 600 500" stroke="#818cf8" fill="none" />
    
    <!-- Coordinate System -->
    <line x1="400" y1="100" x2="400" y2="500" stroke="#818cf8" />
    <line x1="200" y1="300" x2="600" y2="300" stroke="#818cf8" />
    
    <!-- Mathematical Equations -->
    <text x="450" y="200" fill="#f0f9ff" font-family="Arial" font-size="20">y = x² + 2x + 1</text>
    <text x="450" y="240" fill="#f0f9ff" font-family="Arial" font-size="20">a² + b² = c²</text>
    
    <!-- Geometric Shapes -->
    <rect x="100" y="400" width="80" height="80" transform="rotate(-15 140 440)" />
    <circle cx="700" cy="400" r="40" />
  </g>
  
  <!-- Grid Pattern -->
  <g stroke="#818cf8" stroke-width="0.5" opacity="0.2">
    <g id="grid">
      <line x1="0" y1="0" x2="800" y2="0" />
      <line x1="0" y1="50" x2="800" y2="50" />
      <line x1="0" y1="100" x2="800" y2="100" />
      <line x1="0" y1="150" x2="800" y2="150" />
      <line x1="0" y1="200" x2="800" y2="200" />
      <line x1="0" y1="250" x2="800" y2="250" />
      <line x1="0" y1="300" x2="800" y2="300" />
      <line x1="0" y1="350" x2="800" y2="350" />
      <line x1="0" y1="400" x2="800" y2="400" />
      <line x1="0" y1="450" x2="800" y2="450" />
      <line x1="0" y1="500" x2="800" y2="500" />
      <line x1="0" y1="550" x2="800" y2="550" />
    </g>
  </g>
  
  <!-- Decorative Elements -->
  <g opacity="0.3">
    <circle cx="150" cy="150" r="25" fill="#818cf8" />
    <circle cx="650" cy="450" r="35" fill="#818cf8" />
    <circle cx="400" cy="100" r="20" fill="#818cf8" />
  </g>
</svg>